<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/qcs_title_container_linear"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/top_bar_height"
        android:layout_width="match_parent"
        android:background="@drawable/top_bg">
        <TextView
            android:id="@+id/ms_exit"
            android:layout_height="match_parent"
            android:layout_width="@dimen/top_bar_height"
            android:textSize="@dimen/top_bar_text_size"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/back"/>
        <TextView
            android:id="@+id/qcs_title"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="@dimen/top_bar_title_size"
            android:layout_marginRight="50dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="二维码"/>
    </LinearLayout>
    <com.cylee.codescan.SecureViewPager
        android:id="@+id/ms_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.cylee.codescan.SecureViewPager>
</LinearLayout>